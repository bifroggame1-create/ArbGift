# ==============================================
# TON Gift Aggregator Configuration
# ==============================================

# Application
DEBUG=true
LOG_LEVEL=INFO

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ton_gifts
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Meilisearch
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_API_KEY=your-master-key

# TON API (tonapi.io)
# Get your API key at: https://tonconsole.com/
TONAPI_KEY=your-tonapi-key
TONAPI_RATE_LIMIT=5.0
TONAPI_TIMEOUT=30

# TON Center (fallback)
TONCENTER_API_KEY=

# IPFS Gateways (comma-separated)
# Default: cloudflare-ipfs.com, ipfs.io, gateway.pinata.cloud

# CDN (optional, for image caching)
CDN_ENABLED=false
CDN_BUCKET_URL=
CDN_ACCESS_KEY=
CDN_SECRET_KEY=

# Market Adapters
GETGEMS_GRAPHQL_URL=https://api.getgems.io/graphql
GETGEMS_RATE_LIMIT=3.0

# Known Telegram Gift Collections (comma-separated)
# TELEGRAM_GIFT_COLLECTIONS=EQBTKUGf_2wz0mVji52re8oWcDZYUbCm2tAjAWYCODc2u5TP,EQD-BJSVUJviud_Qv7Ymfd3qzXdrmV525e3YDzWQoHIAiInL

# Sync Settings
SYNC_INTERVAL_LISTINGS=60
SYNC_INTERVAL_METADATA=3600
SYNC_BATCH_SIZE=100

# FX Rates
STARS_TO_TON_RATE=0.013
GAS_FEE_TON=0.05
